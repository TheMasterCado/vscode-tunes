{
	"name": "vscode-tunes",
	"displayName": "vscode-tunes",
	"description": "Music community for programmers",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.53.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:vscode-tunes.authenticate",
		"onView:vscode-tunes-sidebar"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"viewsContainers": {
			"activitybar": [
				{
					"id": "vscode-tunes-sidebar-view",
					"title": "VSCode tunes",
					"icon": "media/tunes.svg"
				}
			]
		},
		"views": {
			"vscode-tunes-sidebar-view": [
				{
					"type": "webview",
					"id": "vscode-tunes-sidebar",
					"name": "VSCode tunes",
					"icon": "media/tunes.svg",
					"contextualTitle": "VSCode tunes"
				}
			]
		},
		"commands": [
			{
				"command": "vscode-tunes.authenticate",
				"category": "VSCode tunes",
				"title": "Authenticate"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run package",
		"compile": "webpack",
		"watch": "concurrently \"rollup -c -w\" \"webpack --watch\"",
		"package": "webpack --mode production --devtool hidden-source-map",
		"test-compile": "tsc -p ./",
		"test-watch": "tsc -watch -p ./",
		"pretest": "npm run test-compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@rollup/plugin-commonjs": "^14.0.0",
		"@rollup/plugin-node-resolve": "^8.0.0",
		"@rollup/plugin-typescript": "^6.0.0",
		"@tsconfig/svelte": "^1.0.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.4",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.53.0",
		"@typescript-eslint/eslint-plugin": "^4.14.1",
		"@typescript-eslint/parser": "^4.14.1",
		"concurrently": "^5.3.0",
		"eslint": "^7.19.0",
		"glob": "^7.1.6",
		"mocha": "^8.2.1",
		"rollup": "^2.39.0",
		"rollup-plugin-svelte": "^6.1.1",
		"rollup-plugin-terser": "^7.0.2",
		"svelte": "^3.0.0",
		"svelte-check": "^1.0.0",
		"svelte-preprocess": "^4.0.0",
		"ts-loader": "^8.0.14",
		"typescript": "^4.1.3",
		"vscode-test": "^1.5.0",
		"webpack": "^5.19.0",
		"webpack-cli": "^4.4.0"
	}
}
